        <include layout="@layout/layout_input_live_activity_name" />

        <include layout="@layout/layout_input_live_activity_category" />

        <include layout="@layout/layout_input_live_start_time" />

        <include layout="@layout/layout_input_live_end_time" />

        <include layout="@layout/layout_input_live_playmode" />

        <include layout="@layout/layout_input_live_livenum" />

        <include layout="@layout/layout_input_live_code_rate_types" />

        <include layout="@layout/layout_request_and_show_text" />
    </LinearLayout>


</ScrollView>
