<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_le_live_modify_cover_img_activty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="none"
    tools:context="com.mstring.andtest.activity.live.LeLiveModifyCoverImgActivty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_input_live_activity_id" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_add_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/iv_title_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_add_photo"
                android:layout_centerHorizontal="true"
                android:text="选择图片" />

            <ImageView
                android:id="@+id/image_coverimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_idcard_frame"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <include layout="@layout/layout_request_and_show_text" />
    </LinearLayout>
</ScrollView>
